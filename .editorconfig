# EditorConfig for LogiX Project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = 200
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,vue}]
indent_size = 2
max_line_length = 120

[backend/*.{ts,tsx}]
max_line_length = 120

[frontend/*.{vue,ts,tsx}]
max_line_length = 100

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.{bat,ps1,sh}]
end_of_line = crlf
